<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Logo</th>
      <th>Name</th>
      <th>City</th>
      <th>Country</th>
      <th>Employee satisfaction</th>
      <th>Votes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.logo %></td>
        <td><%= company.name %></td>
        <td><%= company.city %></td>
        <td><%= company.country %></td>
        <td><%= company.employee_satisfaction %></td>
        <td><%= company.votes %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td><%= link_to 'Rate', rate_company_path(company)%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

